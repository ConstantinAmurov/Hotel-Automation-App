  <body>
    
    <%- include ("layouts/Sidebar"); -%>
    <div id="page-content-wrapper">
      <div class="upper">
        <div class="text">
          <h3 id="name">Hello </h3>
          <h1>Let's find the best room for your stay</h1>
      </div>
        
        <img src="/img/travel-img.svg" alt="" srcset="">
      </div>
      <div class="container search-bar ">
        <div class="row">
          <div class="section col ">
            <form action="/home-page" method="POST">
           
            <span class="icon"><i class="far fa-calendar-plus"></i></span>
            <input type="text" name="rangeDate" id="rangeDate" placeholder="Select Date Range" data-input>
